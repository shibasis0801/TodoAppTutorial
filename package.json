{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "Learn html, css, js, ts by building a todo application ",
  "main": "index.js",
  "scripts": {
    "install": "npm i -g browser-sync typescript",
    "build-api": "cd server && tsc --watch",
    "start-api": "node server/index.js",
    "build-final": "cd final/js && tsc --watch",
    "start-final": "cd final/js && browser-sync start --server --files \"*.html, css/*.css, js/*.js\"",
    "build-src": "cd src/js && tsc --watch",
    "start-src": "cd src/js && browser-sync start --server --files \"*.html, css/*.css, js/*.js\"",
    "start": "node start.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shibasis0801/TodoAppTutorial.git"
  },
  "keywords": [
    "TypeScript"
  ],
  "author": "Shibasis Patnaik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shibasis0801/TodoAppTutorial/issues"
  },
  "homepage": "https://github.com/shibasis0801/TodoAppTutorial#readme",
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/morgan": "^1.9.1",
    "@types/sqlite3": "^3.1.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "sqlite": "^4.0.14",
    "sqlite3": "^5.0.0"
  }
}
